{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "ngx-responsive-elements": {
            "projectType": "library",
            "root": "projects/ngx-responsive-elements",
            "sourceRoot": "projects/ngx-responsive-elements/src",
            "prefix": "ngx-re",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-ng-packagr:build",
                    "options": {
                        "tsConfig": "projects/ngx-responsive-elements/tsconfig.lib.json",
                        "project": "projects/ngx-responsive-elements/ng-package.json"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/ngx-responsive-elements/src/test.ts",
                        "tsConfig": "projects/ngx-responsive-elements/tsconfig.spec.json",
                        "karmaConfig": "projects/ngx-responsive-elements/karma.conf.js"
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "projects/ngx-responsive-elements/tsconfig.lib.json",
                            "projects/ngx-responsive-elements/tsconfig.spec.json"
                        ],
                        "exclude": ["**/node_modules/**"]
                    }
                }
            }
        }
    },
    "defaultProject": "ngx-responsive-elements"
}
